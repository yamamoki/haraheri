 <% if list.favorited_by?(current_user) %>
   <%= link_to list_favorites_path(list), method: :delete, remote: true do %>
     <h5 class="fa-solid fa-bookmark">保存済み</h5>
   <% end %>
   <% else %>
     <%= link_to list_favorites_path(list), method: :post, remote: true do %>
     <h5 class="fa-regular fa-bookmark">保存</h5>
   <% end %>
  <% end %>