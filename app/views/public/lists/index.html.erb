<h1>Public::Lists#index</h1>
<p>Find me in app/views/public/lists/index.html.erb</p>

<%= form_tag({controller:"lists",action:"index"},method: :get)do %>
<%= text_field_tag :search %>
<%= select_tag :tag_id,
options_from_collection_for_select(Tag.all, :id, :name, params[:tag_id]),
{ prompt: '全て',}%>
<%= submit_tag '検索する' %>
<% end %>

<h1>投稿一覧</h1>

<% @lists.each do |list| %>
  <p>タイトル</p>
  <%= link_to list.title, list_path(list.id)  %>
  <p>タグ</p>
  <% list.tags.each do |tag| %>
    <%= tag.name %>
  <% end %>

  <p>ユーザーネーム</p>
  <%= list.user.name %>

  <p>画像</p>
  <%= image_tag list.get_image, :size => '200x200' %>


<% end %>
