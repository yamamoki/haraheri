<h2 class="text-center"><%= @list.title %></h2>

 <div class="container">
  <div class="row">
    <div class="col-lg-4">
      <%= image_tag @list.get_image, :size => '300x300' %>
    </div>
    <div class="col-lg-8">
      <div class="row">
        <div class="col-lg-12 border-bottom">
          材料
  <p><%=safe_join(@list.material.split("\n"),tag(:br))%></p>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-12">
          作り方
           <p><%=safe_join(@list.body.split("\n"),tag(:br))%></p>
      </div>
      </div>
</div>
</div>
      <div class="row">
      <div class="col-lg-12">
      <div>
  <p>コメント件数：<%= @list.post_comments.count %></p>
  <% if user_signed_in? %>
  <% @list.post_comments.each do |post_comment| %>
    <%= post_comment.user.name %>
    <%= post_comment.created_at.strftime('%Y/%m/%d') %>
    <p><%=safe_join(post_comment.comment.split("\n"),tag(:br))%>
    <% if post_comment.user == current_user %>
      <%= link_to "削除", list_post_comment_path(post_comment.list, post_comment), method: :delete %>
    <% end %></p>
  <% end %>

  <div id="favorites_<%= @list.id %>">
   <%= render "public/favorites/favorites", list: @list %>
 </div>
<div>
  <%= form_with model: [@list, @post_comment] do |f| %>
    <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %>
    <%= f.submit "送信する" %>
  <% end %>
</div>
<% end %>
    </div>
  </div>
</div>